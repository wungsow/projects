{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@projects/*": [
        "libs/*"
      ],
      "@projects/cryptfolio/portfolio": [
        "libs/cryptfolio/portfolio/src/index.ts"
      ],
      "@projects/cryptfolio/coins": [
        "libs/cryptfolio/coins/src/index.ts"
      ],
      "@projects/cryptfolio/tickers": [
        "libs/cryptfolio/tickers/src/index.ts"
      ],
      "@projects/shared/local-storage": [
        "libs/shared/local-storage/src/index.ts"
      ],
      "@projects/shared/static": [
        "libs/shared/static/src/index.ts"
      ],
      "@projects/shared/clr-components": [
        "libs/shared/clr-components/src/index.ts"
      ],
      "@projects/shared/file-manager": [
        "libs/shared/file-manager/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
